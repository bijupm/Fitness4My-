<?xml version="1.0" encoding="utf-8"?>
 <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
          android:background="@drawable/app_bg_landscape"
      android:layout_height="match_parent">
<LinearLayout 
    android:layout_height="match_parent"
     android:layout_width="match_parent"

    android:gravity="top|center_horizontal"
    android:paddingBottom="5dp"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/topSettingsheader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:stretchColumns="*" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_vertical|center_horizontal" >

            <ImageView
                android:id="@+id/headericon"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/logo" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|center_vertical|center_horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="1dp" >

            <View
                android:layout_width="320dp"
                android:layout_height="3dp"
                android:background="#B8D30B"
                android:padding="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >
            </View>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/topSettingsheader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="3dp" >

        <TableRow
            android:gravity="center_horizontal"
            android:paddingBottom="2dp"
            android:paddingTop="2dp" >

            <ImageView
                android:id="@+id/headericon"
                android:layout_width="112dp"
                android:layout_height="116dp"
                android:adjustViewBounds="true"
                android:src="@drawable/settings" >
            </ImageView>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_span="4"
            android:gravity="center_horizontal" >

            <LinearLayout
                android:id="@+id/liLayoutSettings"
                android:layout_width="fill_parent"
                android:layout_span="4"
                android:gravity="left" >

                <TextView
                    android:id="@+id/lblSettingsname"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:lineSpacingExtra="5dp"
                    android:text="@string/name"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/txtSettingsname"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true" />
            </LinearLayout>
        </TableRow>
 <TableRow
            android:layout_width="fill_parent"
            android:layout_span="4"
            android:gravity="center_horizontal|center_vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_span="4"
                android:gravity="left" >

                <TextView
                      android:id="@+id/lblemail"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:lineSpacingExtra="5dp"
                    android:text="@string/email"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    />

                <EditText
                    android:id="@+id/txtSettingsemail"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:singleLine="true" />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_span="4"
            android:gravity="center_horizontal|center_vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_span="4"
                android:gravity="left" >

                <TextView
                     android:id="@+id/lbllevel"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:lineSpacingExtra="5dp"
                    android:paddingTop="10dp"
                    android:text="Level"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    />

                <RadioGroup
                    android:id="@+id/rbSettingsgroup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="0dp" >

                    <RadioButton
                        android:id="@+id/rbSettingsbeginner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="          " />

                    <RadioButton
                        android:id="@+id/rbSettingsAdvanced"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="          " />

                    <RadioButton
                        android:id="@+id/rbSettingsExpert"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20px"
                        android:text="           " />
                </RadioGroup>
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_span="4"
            android:gravity="center_horizontal|top" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_span="5"
                android:gravity="center_horizontal" >

                <TextView
                    
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:lineSpacingExtra="5dp"
                    android:paddingTop="3dp"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    />

                <TextView
                     android:id="@+id/lblbeadex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:lineSpacingExtra="5dp"
                    android:paddingTop="3dp"
                    android:text="Beginner        Advanced         Expert"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    />
            </LinearLayout>
        </TableRow>

       

        <TableRow
            android:layout_width="fill_parent"
            android:layout_span="4"
            android:gravity="center_horizontal|center_vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_span="4"
                android:gravity="left" >

                <TextView
                     android:id="@+id/lblusername"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:lineSpacingExtra="5dp"
                    android:text="@string/username"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    />

                <TextView
                	 android:id="@+id/txtSettingsUserName"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_span="4"
            android:gravity="left|bottom" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:gravity="left|center_vertical"
                android:paddingBottom="5dp" >

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:imeOptions="actionSend|flagNoEnterAction"
                    android:lineSpacingExtra="5dp"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    />

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

     <Button
            android:id="@+id/imgUserUpdate"
            style="@style/Buttonportrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_portrait"
            android:text="Update Settings" />
        
 
        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:padding="5dp" />
 
       <Button
            android:id="@+id/imgUserRating"
            style="@style/Buttonportrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_portrait"
            android:text="Rate this App" />
     <View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:padding="5dp" />
 <Button
            android:id="@+id/imgdownload"
            style="@style/Buttonportrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_portrait"
            android:text="Download all workouts" />
</LinearLayout>
</ScrollView>